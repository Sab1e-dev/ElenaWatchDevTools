{
  "name": "ewdt",
  "displayName": "ElenaWatchDevelopmentTools",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ewdt.serial.createTerminal",
        "title": "Create Serial Terminal",
        "category": "EWDT > Serial Tools"
      },
      {
        "command": "ewdt.serial.disconnectTerminal",
        "title": "Disconnect Serial Port & Terminal",
        "category": "EWDT > Serial Tools",
        "icon": "$(disconnect)"
      },
      {
        "command": "ewdt.serial.sendFile",
        "title": "Send File to Serial Port via YMODEM Protocol",
        "category": "EWDT > Serial Tools",
        "icon": "$(disconnect)"
      }
    ],
    "icons": {
      "elena-watch": {
        "description": "Elena Watch",
        "default": {
          "fontPath": "media/elena_watch.ttf",
          "fontCharacter": "\\E001"
        }
      }
    },
    "configuration": {
      "title": "ElenaWatchDevTools",
      "properties": {
        "ewdt.debugMode": {
          "type": "boolean",
          "default": "false",
          "description": "Debug Mode"
        },
        "ewdt.terminalTXColor": {
          "type": "string",
          "default": "default",
          "description": "Terminal TX text color",
          "enum": [
            "default",
            "black",
            "red",
            "green",
            "yellow",
            "blue",
            "magenta",
            "cyan",
            "white",
            "gray",
            "brightRed",
            "brightGreen",
            "brightYellow",
            "brightBlue",
            "brightMagenta",
            "brightCyan",
            "brightWhite"
          ]
        },
        "ewdt.terminalRXColor": {
          "type": "string",
          "default": "default",
          "description": "Terminal RX text color",
          "enum": [
            "default",
            "black",
            "red",
            "green",
            "yellow",
            "blue",
            "magenta",
            "cyan",
            "white",
            "gray",
            "brightRed",
            "brightGreen",
            "brightYellow",
            "brightBlue",
            "brightMagenta",
            "brightCyan",
            "brightWhite"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode production",
    "watch": "webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "path-browserify": "^1.0.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "serialport": "^13.0.0"
  }
}